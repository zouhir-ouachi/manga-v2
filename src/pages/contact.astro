---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm';
---

<Layout title="Contact Us">
  <div class="max-w-4xl mx-auto px-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg p-8">
      <h1 class="text-3xl font-bold mb-6">Contact Us</h1>
      <div class="prose dark:prose-invert max-w-none mb-8">
        <p>Have questions, suggestions, or need assistance? We're here to help! Fill out the form below or use one of our other contact methods:</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <ContactForm client:load />
        </div>

        <div class="space-y-8">
          <div class="bg-gray-50 dark:bg-gray-700/50 p-6 rounded-lg">
            <h2 class="text-xl font-semibold mb-4">Other Ways to Reach Us</h2>
            <ul class="space-y-4">
              <li class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                </svg>
                <span>support@mangareader.com</span>
              </li>
              <li class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
                </svg>
                <span>Live Chat (Coming Soon)</span>
              </li>
            </ul>
          </div>

          <div class="bg-gray-50 dark:bg-gray-700/50 p-6 rounded-lg">
            <h2 class="text-xl font-semibold mb-4">Quick Links</h2>
            <ul class="space-y-4">
              <li>
                <a href="/faq" class="flex items-center gap-3 text-blue-500 hover:text-blue-600 dark:text-blue-400 dark:hover:text-blue-300">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                  </svg>
                  <span>FAQ</span>
                </a>
              </li>
              <li>
                <a href="/dmca" class="flex items-center gap-3 text-blue-500 hover:text-blue-600 dark:text-blue-400 dark:hover:text-blue-300">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 01-1.581.814L10 13.197l-4.419 3.617A1 1 0 014 16V4z" clip-rule="evenodd" />
                  </svg>
                  <span>DMCA Policy</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>