---
import { getManga } from "../data/manga";
import { siteConfig } from "../data/site-config";
import { Image, getImage } from "astro:assets";
import IntroImage from "../assets/intro-cover.webp";

const manga = getManga();
---

<section class="bg-gray-800 rounded-lg p-6 mb-12">
  <div class="flex flex-col md:flex-row gap-8">
    <div class="w-full md:w-1/3 lg:w-1/4">
      <div class="image-aspect-ratio">
        <div class="absolute inset-0 bg-gray-200 dark:bg-gray-700 rounded-lg">
        </div>
        <Image
          src={IntroImage}
          alt={manga.title}
          width={600}
          height={900}
          class="rounded-lg shadow-lg relative z-10"
        />
      </div>
    </div>
    <div class="flex-1">
      <h2 class="text-2xl font-bold mb-4 text-container">About the Story</h2>
      <div class="prose dark:prose-invert max-w-none">
        <p class="mb-4 text-container">{manga.description}</p>
        <div class="flex flex-wrap gap-4 mt-6">
          <div
            class="bg-gray-100 dark:bg-gray-700 px-4 py-2 rounded-lg w-[120px]"
          >
            <span class="block text-sm text-gray-600 dark:text-gray-400"
              >Status</span
            >
            <span class="font-semibold">{siteConfig.status}</span>
          </div>
          <div
            class="bg-gray-100 dark:bg-gray-700 px-4 py-2 rounded-lg w-[120px]"
          >
            <span class="block text-sm text-gray-600 dark:text-gray-400"
              >Chapters</span
            >
            <span class="font-semibold">{manga.chapters.length}</span>
          </div>
          <div
            class="bg-gray-100 dark:bg-gray-700 px-4 py-2 rounded-lg w-[120px]"
          >
            <span class="block text-sm text-gray-600 dark:text-gray-400"
              >Author</span
            >
            <span class="font-semibold">{siteConfig.author}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
